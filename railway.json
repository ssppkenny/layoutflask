{
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "./Dockerfile",
        "watchPatterns": [
            "requirements.txt",
            "src/**",
            "railway.json",
            "Dockerfile"
        ]
    },
    "deploy": {
        "startCommand": "gunicorn app:app",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
